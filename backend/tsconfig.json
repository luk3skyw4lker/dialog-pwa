{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",

		"allowJs": true,

		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",

		"removeComments": true,

		"typeRoots": ["./node_modules/@types", "./src/@types"],

		"esModuleInterop": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*.ts"]
}
